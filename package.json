{
	"name": "vue-chartjs-composables-root",
	"version": "0.0.0",
	"description": "Set of composable wrappers for creating reactive charts with Chart.js",
	"publishConfig": {
		"access": "public"
	},
	"files": [
		"dist"
	],
	"main": "./dist/index.js",
	"module": "./dist/index.mjs",
	"exports": {
		"require": "./dist/index.js",
		"import": "./dist/index.mjs"
	},
	"types": "./dist/index.d.ts",
	"scripts": {
		"build-fast": "tsup src/index.ts --format cjs,esm",
		"build": "pnpm run build-fast -- --dts-resolve",
		"test": "vitest run",
		"prepublishOnly": "pnpm run build"
	},
	"license": "MIT",
	"devDependencies": {
		"@egoist/prettier-config": "1.0.0",
		"chart.js": "^4.4.3",
		"prettier": "2.8.4",
		"tsup": "6.6.3",
		"typescript": "4.9.5",
		"vitest": "0.28.5",
		"vue": "^3.4.32"
	},
	"peerDependencies": {
		"chart.js": "^4.4.3",
		"vue": "^3.4.32"
	},
	"dependencies": {
		"@vueuse/core": "^10.11.0"
	}
}
